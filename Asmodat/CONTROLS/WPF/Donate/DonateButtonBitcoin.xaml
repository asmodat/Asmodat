<UserControl x:Class="Asmodat.WPFControls.DonateButtonBitcoin"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Asmodat.WPFControls"
             mc:Ignorable="d">
    <local:ThreadedButton x:Name="TBtnDonate" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" MinWidth="33" MinHeight="33">
        <local:ThreadedButton.Background>
            <ImageBrush RenderOptions.BitmapScalingMode="HighQuality"  Stretch="Uniform" ImageSource="/Asmodat;component/Resources/btc-logo-400.png"/>
        </local:ThreadedButton.Background>
    </local:ThreadedButton>
</UserControl>
