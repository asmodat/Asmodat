             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Asmodat.WPFControls"
             mc:Ignorable="d" Height="30" Width="100">
    <local:ThreadedButton x:Name="TBtnDonate" HorizontalAlignment="Stretch" VerticalAlignment="Stretch">
        <local:ThreadedButton.Background>
            <ImageBrush RenderOptions.BitmapScalingMode="HighQuality"  Stretch="Uniform" ImageSource="/Asmodat;Component/Resources/paypal-donate-button-100.jpg"/>
