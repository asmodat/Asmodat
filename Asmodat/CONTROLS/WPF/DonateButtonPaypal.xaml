<UserControl x:Class="Asmodat.WPFControls.DonateButtonPaypal"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Asmodat.WPFControls"
             mc:Ignorable="d" Height="30" Width="100">
    <DockPanel HorizontalAlignment="Stretch" VerticalAlignment="Stretch"> 
    <Grid>
            <local:ThreadedButton x:Name="TBtnDonate" Margin="1,1,1,1" >
                <local:ThreadedButton.Background>
                    <ImageBrush RenderOptions.BitmapScalingMode="HighQuality"  Stretch="Uniform" ImageSource="/Asmodat;Component/Resources/paypal-donate-button-100.jpg"/>
                </local:ThreadedButton.Background>
            </local:ThreadedButton>
        </Grid>
    </DockPanel>
</UserControl>
